<h1>Listing birds</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Birthdate</th>
    <th>Size</th>
    <th>Kind</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @birds.each do |bird| %>
  <tr>
    <td><%= bird.name %></td>
    <td><%= bird.birthdate %></td>
    <td><%= bird.size %></td>
    <td><%= bird.kind %></td>
    <td><%= link_to 'Show', bird %></td>
    <td><%= link_to 'Edit', edit_bird_path(bird) %></td>
    <td><%= link_to 'Destroy', bird, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

